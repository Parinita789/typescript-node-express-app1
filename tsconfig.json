{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "es2020",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "lib": ["dom", "es2019"],
    "sourceMap": true,
    "outDir": "./dist",
    "types": ["node"],
    "resolveJsonModule": true,
    "preserveWatchOutput": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./**/*.tests.ts",
    "./node_modules",
    "./dist"
  ]
}